{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        ".storybook/**/*",
        "src/**/*.stories.ts",
        "src/**/*.stories.tsx",
        "src/**/*.vue",
        "src/**/*.ts",
        "env.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.storybook.tsbuildinfo",
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "node",
            "vite/client"
        ]
    }
}